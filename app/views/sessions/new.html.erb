
<div class="h-full flex items-center">
<div class="h-[fit-content] w-1/2 max-w-md mx-auto bg-white shadow-md p-4 rounded-xl">
    <h1 class="text-2xl mb-4 text-center">Sign In</h1>
 

    <%= form_with url: sign_in_path do |form| %>
        <div class="mb-5 flex flex-col">
            <%= form.label :email %>
            <%= form.text_field :email, class: "w-full" %>
        </div>
        <div class="mb-5 flex flex-col">
            <%= form.label :password %>
            <%= form.password_field :password, class: "w-full" %>
        </div>
        <div class="mb-3">
            <%= form.submit "Sign In", class:"w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" %>
        </div>
    <% end %>
</div>

</div>